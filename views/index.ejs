<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="logo.png" />
  <title>PicVault</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f7f9fc;
      margin: 0;
      padding: 20px;
    }

    h2,
    h3 {
      color: #333;
    }

    form {
      margin-bottom: 30px;
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 10px rgba(65, 76, 79, 0.05);
    }

    .preview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
    }

    .card {
      background: #fff;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.03);
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .card form {
      margin: 0;
    }

    .card button {
      background: #e74c3c;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .card button:hover {
      background: #c0392b;
    }

    input[type="file"] {
      margin-right: 10px;
    }

    button[type="submit"] {
      background: #3498db;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button[type="submit"]:hover {
      background: #2980b9;
      box-shadow: 2px 6px 15px rgba(79, 70, 229);
    }

    /* Image popup modal */
    .image-popup {
      position: fixed;
      top: 0;
      left: 0;
      display: none;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      justify-content: center;
      align-items: center;
      z-index: 2000;
    }

    .image-popup img {
      max-width: 90%;
      max-height: 90%;
      border-radius: 12px;
      box-shadow: 0 0 25px rgba(255, 255, 255, 0.3);
    }

    .image-popup.active {
      display: flex;
    }

    body.popup-active {
      overflow: hidden;
    }
  </style>
</head>

<body>

  <h2>Upload a New Image</h2>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="profile" required />
    <button type="submit">Upload</button>
  </form>

  <% if (images.length> 0) { %>
    <h3>Uploaded Images</h3>
    <div class="preview">
      <% images.forEach(img=> { %>
        <div class="card">
          <img src="/<%= img.filename %>" alt="<%= img.filename %>" class="thumbnail" />

          <form action="/delete/<%= img._id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </div>
        <% }) %>
    </div>
    <% } %>

      <!-- Global image popup -->
      <div id="popup" class="image-popup" onclick="closePopup(event)">
        <img id="popup-img" src="" alt="Full View" />
      </div>

      <script>
        const popup = document.getElementById("popup");
        const popupImg = document.getElementById("popup-img");

        function showPopup(src) {
          popupImg.src = src;
          popup.classList.add("active");
          document.body.classList.add("popup-active");
        }

        function closePopup(e) {
          if (e.target === popup || e.key === "Escape") {
            popup.classList.remove("active");
            document.body.classList.remove("popup-active");
          }
        }

        document.querySelectorAll(".thumbnail").forEach(img => {
          img.addEventListener("click", () => showPopup(img.src));
        });

        document.addEventListener("keydown", closePopup);
      </script>

</body>

</html>